<%- include('partials/header') %>
<h1 class="day"><%= listTitle %></h1>

<div class="list">
  <% for(let i in newListItem) { %>
  <div class="item">
    <input type="checkbox" />
    <p><%=newListItem[i]%></p>
  </div>
  <% } %>
</div>

<form action="/" method="post">
  <input
    type="text"
    name="newItem"
    placeholder="Add a todo..."
    autocomplete="off"
  />
  <button type="submit" name="list" , value=<%=listTitle %>>+</button>
</form>

<%- include('partials/footer') %>
